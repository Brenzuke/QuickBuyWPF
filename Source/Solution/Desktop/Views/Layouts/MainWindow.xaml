<Window x:Class="Desktop.Models.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.Models"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}">

	<Grid Margin="20">
		<!-- Rows -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Columns -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Name -->
		<Label Content="Nome:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}" />
		<TextBox x:Name="NameField" Grid.Row="0" Grid.Column="1" Style="{StaticResource FieldStyle}" />

		<!-- Price -->
		<Label Content="Preço:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}" />
		<TextBox x:Name="PriceField" Grid.Row="1" Grid.Column="1" Style="{StaticResource FieldStyle}" />

		<!-- Quantity -->
		<Label Content="Quantidade:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}" />
		<TextBox x:Name="QuantityField" Grid.Row="2" Grid.Column="1" Style="{StaticResource FieldStyle}" />

		<!-- Add to cart -->
		<Button Content="Adicionar ao Carrinho" Grid.Row="3" Grid.Column="1" Style="{StaticResource ButtonStyle}" 
			Click="AddProductToCart" />

		<!-- Views -->
		<ListView x:Name="ProductList" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" Height="350">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Nome" DisplayMemberBinding="{Binding Name}" Width="155"/>
					<GridViewColumn Header="Preço" DisplayMemberBinding="{Binding Price}" Width="155"/>
					<GridViewColumn Header="Quantidade" DisplayMemberBinding="{Binding Quantity}" Width="155"/>
					<GridViewColumn Header="Criado em" DisplayMemberBinding="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy}}"  
									Width="155"/>
					<GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="155"/>
					<GridViewColumn Header="Ações" Width="150">
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Button Content="Remover"
								Click="DeleteProductFromCart"
                                Tag="{Binding}" 
                                Background="Red" Foreground="White"
                                Padding="5"/>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>

		<!-- Total -->
		<TextBlock x:Name="TotalPriceField" Grid.Row="5" Grid.ColumnSpan="2" Text="Total: R$ 0,00" 
				   FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="5"/>
	</Grid>
</Window>